<% content_for :title, "Mi Equipo" %>

<div class="flex flex-col">
  <!-- Stats Container -->
  <div class="bg-gray-800 rounded-lg p-4 mb-6">
    <div class="flex items-center justify-between">
      <!-- Team Stats -->
      <div class="flex items-center gap-6">
        <div>
          <span class="text-gray-400 text-sm">Jugadores</span>
          <p class="text-xl font-semibold">
            <%= @team_data[:players]&.count || 0 %> / 25
          </p>
        </div>
        <div class="h-8 w-px bg-gray-700"></div>
        <div>
          <span class="text-gray-400 text-sm">En venta</span>
          <p class="text-xl font-semibold">
            <%= @team_data[:players]&.count { |p| p.being_sold } || 0 %> / 6
          </p>
        </div>
        <div class="h-8 w-px bg-gray-700"></div>
        <div>
          <span class="text-gray-400 text-sm">Valor</span>
          <% team_value = @team_data[:players]&.sum(&:value) || 0 %>
          <% current_balance = @team_data[:info][:current_balance].to_s.gsub(/[^\d-]/, '').to_i %>
          <% total_value = team_value + current_balance %>
          <div class="flex flex-col">
            <p class="text-xl font-semibold leading-tight">
              <%= format_value(team_value) %>
            </p>
            <p class="text-sm text-gray-400 <%= total_value < 0 ? 'text-red-500' : '' %>">
              real: <%= format_value(total_value) %>
            </p>
          </div>
        </div>
      </div>

      <!-- Financial Stats -->
      <div class="flex items-center gap-6">
        <div>
          <span class="text-gray-400 text-sm">Balance</span>
          <div class="flex flex-col">
            <p class="text-xl font-semibold leading-tight <%= @team_data[:info][:current_balance].include?('-') ? 'text-red-500' : '' %>">
              <%= @team_data[:info][:current_balance] %>
            </p>
            <p class="text-sm text-gray-400 <%= @team_data[:info][:future_balance].include?('-') ? 'text-red-500' : '' %>">
              futuro: <%= @team_data[:info][:future_balance] %>
            </p>
          </div>
        </div>
        <div class="h-8 w-px bg-gray-700"></div>
        <div>
          <span class="text-gray-400 text-sm">Deuda m√°xima</span>
          <p class="text-xl font-semibold <%= @team_data[:info][:max_debt].include?('-') ? 'text-red-500' : '' %>">
            <%= @team_data[:info][:max_debt] %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-gray-800 rounded-lg p-4">
    <div class="p-4 border-b border-gray-700">
      <h2 class="text-2xl font-bold">Mi Plantilla</h2>
    </div>

    <div class="overflow-y-auto flex-1 p-4">
      <div class="space-y-4">
        <% if @team_data[:players]&.any? %>
          <% @team_data[:players].each do |player| %>
            <%= render partial: "fantasy/partials/player_card", locals: { player: player } %>
          <% end %>
        <% else %>
          <div class="text-center py-8">
            <p class="text-gray-400">No hay jugadores en tu equipo</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
