<%#
  Required locals:
  - id: String (unique ID for the pagination container, e.g., 'market-pagination')
  - current_page: Integer (current page number)
  - total_pages: Integer (total number of pages)
  - type: String (unique identifier for the pagination type, e.g., 'market', 'feed')
%>

<% if total_pages > 1 %>
  <div id="<%= id %>" class="flex items-center justify-center gap-4 mt-4">
    <button
      class="first-<%= type %> p-2 bg-gray-800 text-white rounded-lg border-2 border-gray-700 hover:bg-gray-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors duration-200"
      data-page="1"
      <%= 'disabled' if current_page <= 1 %>
      aria-label="Primera página"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m-7 7h14"></path>
      </svg>
    </button>

    <button
      class="previous-<%= type %> p-2 bg-gray-800 text-white rounded-lg border-2 border-gray-700 hover:bg-gray-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors duration-200"
      data-page="<%= current_page - 1 %>"
      <%= 'disabled' if current_page <= 1 %>
      aria-label="Página anterior"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>

    <span id="current-page-<%= type %>" data-totalpages="<%= total_pages %>" class="text-white font-medium">
      <span class="text-xl font-bold ml-2"><%= current_page %></span>
      <span class="text-gray-400">de</span>
      <span class="text-gray-300 mr-2"><%= total_pages %></span>
    </span>

    <button
      class="next-<%= type %> p-2 bg-gray-800 text-white rounded-lg border-2 border-gray-700 hover:bg-gray-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors duration-200"
      data-page="<%= current_page + 1 %>"
      <%= 'disabled' if current_page >= total_pages %>
      aria-label="Página siguiente"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </button>

    <button
      class="last-<%= type %> p-2 bg-gray-800 text-white rounded-lg border-2 border-gray-700 hover:bg-gray-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors duration-200"
      data-page="<%= total_pages %>"
      <%= 'disabled' if current_page >= total_pages %>
      aria-label="Última página"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7m7-7H6"></path>
      </svg>
    </button>
  </div>
<% end %>
