<%#
  Required locals:
  - id: String (unique ID for the pagination container)
  - current_page: Integer (current page number)
  - total_pages: Integer (total number of pages)
  - type: String (market or events)
%>

<% if total_pages > 1 %>
  <% current_page = current_page.to_i %>
  <div id="<%= id %>" class="flex items-center justify-center gap-4 mt-4">
    <button type="button"
      class="p-2 bg-gray-800 text-white rounded-lg border-2 border-gray-700 hover:bg-gray-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors duration-200 #{current_page <= 1 ? 'opacity-50 pointer-events-none' : ''}"
      aria-label="Primera página"
      data-action="click->fantasy--<%= type %>#changePage"
      data-page="1">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m-7 7h14"></path>
      </svg>
    </button>

    <button type="button"
      class="p-2 bg-gray-800 text-white rounded-lg border-2 border-gray-700 hover:bg-gray-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors duration-200 #{current_page <= 1 ? 'opacity-50 pointer-events-none' : ''}"
      aria-label="Página anterior"
      data-action="click->fantasy--<%= type %>#changePage"
      data-page="<%= current_page - 1 %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>

    <span id="current-page-<%= id %>" data-totalpages="<%= total_pages %>" class="text-white font-medium">
      <span class="text-xl font-bold ml-2"><%= current_page %></span>
      <span class="text-gray-400">de</span>
      <span class="text-gray-300 mr-2"><%= total_pages %></span>
    </span>

    <button type="button"
      class="p-2 bg-gray-800 text-white rounded-lg border-2 border-gray-700 hover:bg-gray-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors duration-200 #{current_page >= total_pages ? 'opacity-50 pointer-events-none' : ''}"
      aria-label="Página siguiente"
      data-action="click->fantasy--<%= type %>#changePage"
      data-page="<%= current_page + 1 %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </button>

    <button type="button"
      class="p-2 bg-gray-800 text-white rounded-lg border-2 border-gray-700 hover:bg-gray-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors duration-200 #{current_page >= total_pages ? 'opacity-50 pointer-events-none' : ''}"
      aria-label="Última página"
      data-action="click->fantasy--<%= type %>#changePage"
      data-page="<%= total_pages %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7m7-7H6"></path>
      </svg>
    </button>
  </div>
<% end %>
