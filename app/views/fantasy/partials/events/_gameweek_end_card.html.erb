<%# Gameweek End Card %>
<% grouped ||= false %>
<div class="flex items-center bg-gray-700 hover:bg-gray-700/70 transition-colors w-full rounded <%= grouped ? 'p-2' : 'p-3' %>">
  <div class="flex-1 flex flex-col min-w-0">
    <div class="flex items-center justify-between gap-2 mb-3">
      <div class="flex items-center gap-2">
        <div class="bg-green-500 skew-x-[-10deg] px-3 py-1 rounded-sm">
          <span class="block skew-x-[10deg] text-sm font-bold text-white">Fin de la <%= event[:gameweek] %></span>
        </div>
      </div>
    </div>

    <div class="flex flex-col gap-2">
      <% event[:rankings].each do |user| %>
        <div class="flex items-center justify-between bg-black/20 rounded-lg p-2">
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 bg-orange-300 text-black font-bold rounded-full flex items-center justify-center overflow-hidden">
              <% if user[:user_img].present? %>
                <img class="w-full h-full object-cover" src="<%= user[:user_img] %>" alt="<%= user[:name] %>" loading="lazy">
              <% else %>
                <span><%= user[:name][0].upcase %></span>
              <% end %>
            </div>
            <div class="flex flex-col">
              <div class="flex items-center gap-2">
                <div class="bg-black/30 skew-x-[-10deg] px-2 py-0.5 rounded-sm">
                  <span class="block skew-x-[10deg] text-xs font-bold text-white">#<%= user[:position] %></span>
                </div>
                <span class="font-bold"><%= user[:name] %></span>
              </div>
              <div class="flex items-center gap-2 mt-0.5">
                <span class="text-gray-400 text-sm"><%= user[:points] %> pts</span>
                <span class="text-green-500 text-sm"><%= user[:profit] %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
