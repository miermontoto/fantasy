<div class="flex w-full grow justify-center">
  <div class="flex w-full flex-col shadow-2xl items-center bg-gray-800 border-2 border-gray-700 rounded-lg shadow m-2 md:flex-row md:max-w-xl hover:bg-gray-700">
    <div class="flex flex-col justify-between p-4 leading-normal w-full">
      <div class="flex items-center justify-between">
        <h1 class="text-white font-bold text-lg">Fin de <%= event[:gameweek] %></h1>
        <span class="text-gray-400 text-sm"><%= event[:date] %></span>
      </div>
      <div class="mt-4">
        <% event[:rankings].each do |user| %>
          <div class="flex items-center justify-between py-1">
            <div class="flex items-center">
              <div class="min-w-8 min-h-8 w-8 h-8 bg-orange-300 text-black font-bold rounded-full flex items-center justify-center overflow-hidden">
                <% if user[:user_img].present? %>
                  <img class="w-full h-full object-cover" src="<%= user[:user_img] %>" alt="<%= user[:name] %>" loading="lazy">
                <% else %>
                  <span><%= user[:name][0].upcase %></span>
                <% end %>
              </div>
              <span class="text-gray-300 ml-2"><%= user[:position] %>. <%= user[:name] %></span>
            </div>
            <div class="flex items-center">
              <span class="text-white font-bold mr-2"><%= user[:points] %> pts</span>
              <span class="text-green-500"><%= user[:profit] %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
