<%# Gameweek Start Card %>
<div class="flex items-center bg-gray-700 rounded-lg p-2 hover:bg-gray-600 transition-colors w-full">
  <div class="flex-1 flex flex-col min-w-0">
    <div class="flex items-center justify-between gap-2">
      <div class="flex items-center gap-3">
        <div class="bg-blue-500 skew-x-[-10deg] px-3 py-1 rounded-sm">
          <span class="block skew-x-[10deg] text-sm font-bold text-white">Jornada <%= event[:gameweek] %></span>
        </div>
        <div class="bg-black/30 skew-x-[-10deg] px-2 py-0.5 rounded-sm">
          <span class="block skew-x-[10deg] text-sm text-gray-400"><%= event[:subtitle] %></span>
        </div>
      </div>

      <div class="text-xs text-gray-400 px-2 py-0.5 bg-black/30 rounded">
        <span class="text-gray-400 text-xs"><%= event[:date] %></span>
      </div>
    </div>
  </div>
</div>
