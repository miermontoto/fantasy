<div class="flex w-full grow justify-center">
  <div class="flex w-full flex-col shadow-2xl items-center bg-gray-800 border-2 border-gray-700 rounded-lg shadow m-2 md:flex-row md:max-w-xl hover:bg-gray-700">
    <div class="flex flex-col justify-between p-4 leading-normal w-full">
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-white font-bold text-lg">Bajadas de cl√°usulas</h1>
        <span class="text-gray-400 text-sm"><%= event[:date] %></span>
      </div>
      <% event[:players].each do |player| %>
        <div class="flex items-center justify-between py-2 border-t border-gray-700">
          <div class="flex items-center">
            <img class="w-12 h-12 rounded-full mr-3" src="<%= player[:player_img] %>" alt="<%= player[:name] %>" loading="lazy">
            <div>
              <h2 class="text-white"><%= player[:name] %></h2>
              <p class="text-gray-400 text-sm"><%= player[:owner] %></p>
            </div>
          </div>
          <div class="flex items-center">
            <div class="flex flex-col items-end">
              <span class="text-red-500 font-bold"><%= player[:new_price] %></span>
              <span class="text-gray-400 text-sm line-through"><%= player[:old_price] %></span>
            </div>
            <img class="w-6 h-6 ml-2" src="<%= player[:team_img] %>" alt="Team logo" loading="lazy">
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
