<%# Clause Drops Card %>
<div class="flex items-center bg-gray-700 rounded-lg p-2 hover:bg-gray-600 transition-colors w-full">
  <div class="flex-1 flex flex-col min-w-0">
    <div class="flex items-center justify-between gap-2 mb-3">
      <div class="flex items-center gap-2">
        <div class="bg-red-500 skew-x-[-10deg] px-3 py-1 rounded-sm">
          <span class="block skew-x-[10deg] text-sm font-bold text-white">Bajada de cl√°usula</span>
        </div>
      </div>

      <div class="text-xs text-gray-400 px-2 py-0.5 bg-black/30 rounded">
        <span class="text-gray-400 text-xs"><%= event[:date] %></span>
      </div>
    </div>

    <div class="flex flex-col gap-3">
      <% event[:players].each do |player| %>
        <div class="flex items-center justify-between bg-black/20 rounded-lg p-2">
          <div class="flex items-center gap-3">
            <div class="relative">
              <img class="w-10 h-10 rounded-lg" src="<%= player[:player_img] %>" alt="<%= player[:name] %>" loading="lazy">
              <img class="absolute -bottom-1 -right-1 w-4 h-4 rounded-sm bg-white/10 p-0.5" src="<%= player[:team_img] %>" alt="Team logo" loading="lazy">
            </div>
            <div class="flex flex-col">
              <span class="font-bold"><%= player[:name] %></span>
              <span class="text-gray-400 text-sm"><%= player[:owner] %></span>
            </div>
          </div>

          <div class="flex items-center gap-3">
            <div class="flex flex-col items-end">
              <div class="bg-black/30 skew-x-[-10deg] px-2 py-0.5 rounded-sm">
                <span class="block skew-x-[10deg] text-sm font-bold text-red-500"><%= player[:new_price] %></span>
              </div>
              <span class="text-gray-400 text-xs mt-0.5"><%= player[:old_price] %></span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
