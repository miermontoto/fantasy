<div class="overflow-y-auto flex-1 p-4">
  <div class="space-y-4">
    <% if players.any? %>
      <% players.each do |player| %>
        <%= render partial: "fantasy/partials/player_card", locals: { player: player } %>
      <% end %>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-400">No hay jugadores que coincidan con los filtros</p>
      </div>
    <% end %>
  </div>
</div>

<% if total_pages > 1 %>
  <div class="p-4 border-t border-gray-700">
    <%= render partial: "fantasy/partials/pagination", locals: {
      id: "team-pagination",
      current_page: page,
      total_pages: total_pages,
      type: "team"
    } %>
  </div>
<% end %>
