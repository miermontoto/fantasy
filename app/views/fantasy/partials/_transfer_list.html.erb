<div>
  <h2 class="text-center font-bold text-2xl mb-10">TOP MERCADO</h2>
  <div id="market-container">
    <% @paginated_market_data.each do |market_item| %>
      <%= render partial: "fantasy/partials/market_player", locals: { market_player: market_item } %>
    <% end %>
  </div>

  <!-- Market Pagination Controls -->
  <%= render partial: "fantasy/partials/pagination", locals: {
    id: "market-pagination",
    current_page: @current_page_market,
    total_pages: @total_pages_market,
    type: "market"
  } %>
</div>

<div>
  <h2 class="text-center font-bold text-2xl mb-10">EVENTOS</h2>
  <div id="events-container">
    <% @paginated_feed_data.each do |event| %>
      <% case event[:type] %>
      <% when :transfer %>
        <%= render partial: "fantasy/partials/transfer_card", locals: { transfer: event[:data] } %>
      <% when :gameweek_start %>
        <%= render partial: "fantasy/partials/gameweek_start_card", locals: { event: event[:data] } %>
      <% when :gameweek_end %>
        <%= render partial: "fantasy/partials/gameweek_end_card", locals: { event: event[:data] } %>
      <% when :clause_drops %>
        <%= render partial: "fantasy/partials/clause_drops_card", locals: { event: event[:data] } %>
      <% end %>
    <% end %>
  </div>

  <!-- Feed Pagination Controls -->
  <%= render partial: "fantasy/partials/pagination", locals: {
    id: "feed-pagination",
    current_page: @current_page_feed,
    total_pages: @total_pages_feed,
    type: "feed"
  } %>
</div>
