<%# Stats Container %>
<div class="bg-gray-800 rounded-lg p-4 mb-6">
  <div class="flex flex-wrap items-center justify-between gap-4">
    <div class="flex items-center gap-6">
      <div>
        <span class="text-gray-400 text-sm">Balance</span>
        <div class="flex flex-col">
          <p class="text-xl font-semibold leading-tight <%= info[:current_balance].include?('-') ? 'text-red-500' : '' %>">
            <%= info[:current_balance] %>
          </p>
          <p class="text-sm text-gray-400 <%= info[:future_balance].include?('-') ? 'text-red-500' : '' %>">
            futuro: <%= info[:future_balance] %>
          </p>
        </div>
      </div>
      <div class="h-8 w-px bg-gray-700"></div>
      <div>
        <span class="text-gray-400 text-sm">Deuda Máxima</span>
        <p class="text-xl font-semibold <%= info[:max_debt].include?('-') ? 'text-red-500' : '' %>">
          <%= info[:max_debt] %>
        </p>
      </div>
    </div>
    <div class="flex items-center gap-6">
      <% if info[:next_update].present? %>
        <div>
          <span class="text-gray-400 text-sm">Próxima Actualización</span>
          <p class="text-lg font-semibold"><%= info[:next_update] %></p>
        </div>
      <% end %>
      <% if info[:next_update].present? && defined?(additional_stats) %>
        <div class="h-8 w-px bg-gray-700"></div>
      <% end %>
      <%= additional_stats if defined?(additional_stats) %>
    </div>
  </div>
</div>
